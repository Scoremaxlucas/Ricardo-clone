{
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "env": {
    "VERCEL_BYPASS_FALLBACK_OVERSIZED_ERROR": "1"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/orders/auto-release",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/reminders",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/dispute-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/auction-reminders",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/stripe-alerts",
      "schedule": "0 * * * *"
    }
  ]
}
